<div class="aside-wrapper">
{% for aside in entry.sidenotes %}

    {% if aside.type == 'aside' %}
        <input type="radio" class="aside-input" name="aside-input-{{ entry.slug }}" id="aside-{{ entry.slug }}-{{loop.index}}" {% if loop.first %}checked{% endif %}>
        <aside class="margin-aside">
            {% if aside.asideImage | length %}
                <div class="cropper">
                <img src="{{ aside.asideImage.first().getUrl() }}" {# style="background-image: url({{ aside.asideImage.first().getUrl() }})" #} alt="{{ aside.title }}">
                </div>
            {% endif %}
            <h1>{{ aside.heading }}</h1>
            <blockquote>{{ aside.quote }}</blockquote>
            <p>{{ aside.body }}</p>

            {% if aside.asideCitation | length %}
                <small class="citation">{% include 'full-citation.twig' with { 'citations': aside.asideCitation } only %}</small>
            {% endif %}
            {% if aside.chapters | length %}
                <ul class="aside-links">
                <h2>Read more about this:</h2>
                {% for chapter in aside.chapters %}
                    <a href="{{ chapter.getUrl() }}">{{ chapter.heading }}</a><button class="aside-link-button"></button>
                {% endfor %}
                </ul>
            {% endif %}
            {# <hr> #}
        </aside>
    {% endif %}
{% endfor %}
</div>